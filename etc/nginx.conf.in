daemon off;

events {
    worker_connections 4098;
}
worker_processes 1;
error_log stderr;

http {
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    lua_shared_dict stat_dict 5M;
    types_hash_bucket_size 64;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" '
                      '$msec $request_time $upstream_response_time';

    # TODO: Add ElasticSearch logs
    #access_log /var/log/gns-api-nginx.access.log main;

    keepalive_timeout 65;

    client_body_temp_path /tmp/gns.client_body_temp;
    fastcgi_temp_path /tmp/gns.fastcgi_temp;
    proxy_temp_path /tmp/gns.proxy_temp;
    scgi_temp_path /tmp/gns.scgi_temp;
    uwsgi_temp_path /tmp/gns.uwsgi_temp;

    server {
        server_name localhost;
        listen *:7887;

        location = /nginx_status {
            stub_status on;
            access_log off;
        }

        location /status_stat {
            default_type 'text/html';
            content_by_lua_file 'show_stat.lua';
        }

        location / {
            set $stat_counter $1;
			uwsgi_pass %%UWSGI_HOST%%:7886;
            include /etc/nginx/uwsgi_params;
            log_by_lua_file 'collect_stats.lua';
        }
    }
}

